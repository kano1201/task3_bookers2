<%= render 'layouts/list', user: @user, book: @book %>

<div class="col-md-8 offset-md-1">
 <h2>Users</h2>
 <table class="table">
   <thead>
     <tr>
       <th>image</th>
       <th>name</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   
   <tbody>
    <% @users.each do |user| %> 
    <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
    <tr><%= user.name %></tr>
    <tr><%= link_to "Show", user_path(user.id) %></tr>
    <% end %>
   </tbody>
 </table>
</div>