<div class="container px-5 px-sm-0">
 <div class="row">
<%= render 'layouts/list', user: @user, book: @book %>

<div class="col-md-8 offset-md-1">
 <h2>Users</h2>
 <table class="table">
  <thead>
   <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
   </tr>
  </thead>
   
   <tbody>
    <tr>
     <% @users.each do |user| %> 
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
     <% end %>
    </tr>
   </tbody>
   
 </table>
</div>

 </div>
</div>