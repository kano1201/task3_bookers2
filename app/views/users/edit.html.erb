<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
 <div class="form-group">
  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
 </div>
 <div class="form-group">
  <label for="inputImage">Image</label>
  <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
 </div>
 <div class="form-group">
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, class: 'form-control', id: 'user_introduction', placeholder:"紹介文"%>
 </div>
 <div class="form-group">
  <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
 </div>
<% end %>
    </div>
  </div>
</div>
