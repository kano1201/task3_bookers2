<p><%= flash[:notice] %></p>


<div class="profile-container col-md-3">
  <h1>User info</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
       <th class="profile-name">name <%= @user.name %></th>
      </tr>
      <tr>
       <th class="profile-introduction">introduction <%= @user.introduction %> </th>
      </tr>
    </tbody>
  </table>
  
  <div class="row">
   <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user)  %></p>
   <% end %>
  </div>
  
</div>

<div class="col-md-8 offset-md-1">
 <h1>Books</h1>

 <table class="table table-hover table-inverse">
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   
   <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
       <td>
         <%= link_to book_path(book.id) do %>
          <%= book.title %>
         <% end %>
        </td>
        <td><%= book.body %></td>
     </tr>
    <% end %>
   </tbody>
 
 </table>
</div>
<%= paginate @books %>