<p><%= flash[:notice] %></p>

<div class="profile-container">
  <h1>User info</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <p class="profile-name">name <%= @user.name %></p>
  <p class="profile-introduction">introduction <%= @user.introduction %> </p>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

</div>

<tbody>
<h1>Books</h1>

<% @books.each do |book| %>
<div>
  <p>投稿ユーザー画像：</p>
  <p>Title：</p>
  <%= link_to book_path(book.id) do %>
   <%= book.title %>
  <% end %>
  <p>Opinion：<%= book.body %></p>

</div>
<% end %>
</tbody>
<%= paginate @books %>