<div class="profile-container col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
       <th class="profile-name">
         name
        <th><%= current_user.name %></th>
       </th>
      </tr>
      <tr>
       <th class="profile-introduction">
         introduction
        <th><%= current_user.introduction %></th>
       </th>
      </tr>
    </tbody>
  </table>
  
  <div class="row">
   <% if current_user.id %>
   <%= link_to "",edit_user_path(id: current_user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
   <% end %>
  </div>
  
</div>

<div class="mt-3">
<h2>New book</h2> <!--Book新規投稿画面-->
<% if book.errors.any? %>
  <%= book.errors.count %>errors
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <p><%= f.text_field :title %></p>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
     <p><%= f.text_area :body %></p>
  </div>
  <div class="form-group">
   <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>
<% end %>
</div>
