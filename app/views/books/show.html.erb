<p><%= flash[:notice] %></p>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'layouts/list', user: @user, book: @book %>
  </div>


<div class="col-md-8 offset-md-1">
<h2>Book detail</h2> <!--Book詳細画面-->

 <table class="table">
   <tbody>
     <tr>
       <td>
         <%= link_to (attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"), user_path(@user.id) %>
       </td>
       <td>
         <%= link_to @books.title, book_path(@books.id) %>
       </td>
       <td><%= @books.body %></td>

       <% if @books.user == current_user %>
       <td><%= link_to "Edit", edit_book_path(@books), class: 'btn btn-sm btn-success' %></td>
       <td><%= link_to "Destroy", book_path(@books), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "本当に消しますか?" %></td>
       <% end %>
     </tr>
   </tbody>
 </table>
</div>

 </div>
</div>